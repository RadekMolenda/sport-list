<%= erb(:sports, layout: false, locals: { active: @sports.sport.id }) %>
<div class="large-4 columns left">
  <ul class="side-nav">
    <% @sports.events.each do |event| %>
      <li class="<%= event.id == active ? 'active' : '' %>"><a href="/sports/<%= @sports.sport.id %>/events/<%= event.id %>"><%= event.title %></a></li>
    <% end %>
  </ul>
</div>
